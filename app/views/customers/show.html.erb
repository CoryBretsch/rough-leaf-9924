<section class="customer-info">
  <%= @customer.name %>
</section>

<section class="item-info">
  <% @customer.items.each do |item| %>
    <%= "Item Name: #{item.name}" %>
    <%= "Item Price: #{item.price}" %>
    <%= "Supermarket: #{item.supermarket.name}" %>
    <% end %>
</section>

<section class="add-item">
    <%= form_with url: "/customer_items", method: :post, data: {turbo:false} do |form| %>
      <%= form.hidden_field :customer_id, value: @customer.id %>
      <%= form.label :item_id %>
      <%= form.text_field :item_id %>
      <%= form.submit "Add Item" %>
      <% end %>
</section>